{
  "name": "vite-ssr-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run build:server && node dist/index.cjs",
    "build": "npm run build:client && npm run build:ssr && npm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:ssr": "vite build --outDir dist/ssr --ssr src/entry-ssr.tsx",
    "build:server": "esbuild src/server.ts --bundle --outfile=dist/index.cjs --platform=node --external:vite",
    "start": "node dist/index.cjs"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "get-port": "^7.0.0",
    "node-html-parser": "^6.1.12",
    "parse5-html-rewriting-stream": "^7.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "wouter": "^2.11.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/mustache": "^4.2.2",
    "@types/node": "^20.3.0",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@types/react-helmet": "^6.1.11",
    "@types/validator": "^13.7.17",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "postcss-import": "^15.1.0",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.2",
    "vite": "^4.3.9"
  }
}
